{
  "name": "remix-image",
  "version": "1.0.0",
  "description": "A React component for responsive images in Remix",
  "author": "Josh McFarlin <josh@mcfarl.in>",
  "license": "MIT",
  "sideEffects": false,
  "keywords": [
    "react",
    "remix",
    "image",
    "responsive"
  ],
  "homepage": "https://remix-image.mcfarl.in",
  "repository": {
    "type": "git",
    "url": "https://github.com/Josh-McFarlin/remix-image.git",
    "directory": "packages/remix-image"
  },
  "bugs": {
    "url": "https://github.com/Josh-McFarlin/remix-image/issues"
  },
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "exports": {
    ".": "./build/index.js",
    "./server": "./build/server/index.js",
    "./serverPure": "./build/server/pure.js"
  },
  "files": [
    "build",
    "package.json",
    "README.md",
    "server.d.ts",
    "serverPure.d.ts"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss}\"",
    "lint": "eslint --fix --ext ts --ext tsx --ext js --ext jsx .",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test": "jest -c=../../jest.config.js --passWithNoTests",
    "test:watch": "jest -c=../../jest.config.js --watch",
    "prebuild": "rimraf coverage build tmp",
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "release": "dotenv release-it -- --only-version"
  },
  "dependencies": {
    "is-svg": "^4.3.2",
    "js-image-lib": "^1.0.1",
    "lru-cache": "^7.10.1",
    "query-string": "^7.1.1"
  },
  "devDependencies": {
    "@cloudflare/kv-asset-handler": "^0.2.0",
    "@cloudflare/workers-types": "^3.10.0",
    "@next-boost/hybrid-disk-cache": "^0.3.0",
    "@remix-run/node": "^1.6.0",
    "@remix-run/react": "^1.6.0",
    "@remix-run/server-runtime": "^1.6.0",
    "@types/react": "^17.0.37",
    "babel-loader": "^8.2.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.6.0",
    "rollup-plugin-copy": "^3.4.0"
  },
  "peerDependencies": {
    "@cloudflare/kv-asset-handler": "^0.2.0",
    "@next-boost/hybrid-disk-cache": "^0.3.0",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "remix": "^1.0.0"
  }
}
