{
  "name": "remix-image",
  "version": "0.1.5",
  "description": "A React component for responsive images in Remix",
  "author": "Josh McFarlin <josh@mcfarl.in>",
  "license": "MIT",
  "keywords": [
    "react",
    "remix",
    "image",
    "responsive"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Josh-McFarlin/remix-image.git"
  },
  "bugs": {
    "url": "https://github.com/Josh-McFarlin/remix-image/issues"
  },
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "style": "build/styles.css",
  "exports": {
    ".": "./build/index.js",
    "./loaders": "./build/loaders/index.js",
    "./hooks": "./build/hooks/index.js",
    "./components": "./build/components/index.js"
  },
  "files": [
    "build",
    "package.json",
    "README.md",
    "components.d.ts",
    "hooks.d.ts",
    "loaders.d.ts"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss}\"",
    "lint": "eslint --fix --ext ts --ext tsx --ext js --ext jsx .",
    "prebuild": "rimraf coverage build tmp",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "prepare": "husky install",
    "commit": "commit",
    "release": "dotenv release-it --"
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "file-type": "^16.5.3"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
