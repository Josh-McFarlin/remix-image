    "lint": "eslint --fix --ext ts --ext tsx --ext js --ext jsx .",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "commit": "git-cz",
    "update-docs": "npm run deploy --prefix docs",
    "prepare": "husky install"
  },
